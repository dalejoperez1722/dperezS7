<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dperezS7.vistas.elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ACTUALIZAR - ELIMINAR" FontSize="20" HorizontalOptions="Center" TextColor="Blue"/>
            <Entry x:Name="txtNombre" Placeholder="Nombre " PlaceholderColor="Red" />
            <Entry x:Name="txtUsuario" Placeholder="Usuario " PlaceholderColor="Red"/>
            <Entry x:Name="txtContraseña" Placeholder="Contraseña " PlaceholderColor="Red"/>
            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" BackgroundColor="Aquamarine"/>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" BackgroundColor="Aquamarine"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>