<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dperezS7.vistas.consultaRegistro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text ="LISTA DE ESTUDIANTES" FontSize="20" HorizontalTextAlignment="CENTER" TextColor="Blue"/>
            <ListView x:Name="listaEstudiantes" ItemSelected="listaEstudiantes_ItemSelected" BackgroundColor="AliceBlue">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}" Detail="{Binding Usuario}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>